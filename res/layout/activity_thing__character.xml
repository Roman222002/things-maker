                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/charakter_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.21"
